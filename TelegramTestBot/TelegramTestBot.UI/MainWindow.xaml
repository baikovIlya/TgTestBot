<Window x:Class="TelegramTestBot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelegramTestBot.UI"
        mc:Ignorable="d"
        Title="TelegramBot For DevEdu" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Главное меню">
                <Grid >
                    <Label Content="Пользователи" HorizontalAlignment="Left" Margin="259,18,0,0" VerticalAlignment="Top" Height="32" Width="238" FontSize="16"/>
                    <Button x:Name="ButtonCreateGroup" Content="Создать группу" HorizontalAlignment="Left" Margin="42,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="47" Width="166"/>
                    <Button x:Name="ButtonCreateTest_Poll" Content="Создать тест/опрос" HorizontalAlignment="Left" Margin="295,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="47" Width="166"/>
                    <Button x:Name="ButtonCreateReport" Content="Создать отчет" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" Height="47" Width="166" Grid.Column="1"/>
                    <Button x:Name="ButtonStartTest" Content="Запуск теста/опроса" HorizontalAlignment="Left" Margin="5,26,0,0" VerticalAlignment="Top" Height="47" Width="166" Grid.Column="1"/>
                    <ListView x:Name="UserList" Margin="477,310,-915,-170" Grid.RowSpan="2" Grid.Column="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListBox x:Name="LB_Users" Margin="0,55,0,90" Grid.RowSpan="2"/>
                    <Button x:Name="ButtonStart" Content="Start" Grid.Column="1" HorizontalAlignment="Left" Margin="45,20,0,0" Grid.Row="1" VerticalAlignment="Top" Height="50" Width="90" Click="ButtonStart_Click"/>
                    <Button x:Name="EditNameButton" Content="Save" HorizontalAlignment="Left" Margin="625,225,0,0" VerticalAlignment="Top" Height="20" Width="160" Grid.ColumnSpan="2" Click="EditNameButton_Click"/>
                    <TextBox x:Name="TB_Name" Grid.Column="2" HorizontalAlignment="Left" Margin="5,207,0,0" Text="Enter new name" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
                    <Label x:Name="LabelError" Content="" Grid.Column="1" HorizontalAlignment="Center" Margin="0,258,0,0" VerticalAlignment="Top" Width="153" Height="35" Background="Red"/>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="18*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Создание вопроса на опрос">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="TB_QuestForPoll" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="498" Height="90" Margin="0,93,0,0"/>
                    <Label Content="Введите содержание вопроса" HorizontalAlignment="Left" Margin="208,57,0,0" VerticalAlignment="Top" Width="278" FontSize="16"/>
                    <Button x:Name="Button_Next" Content="Дальше" HorizontalAlignment="Left" Margin="63,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="47" Width="166" FontSize="16"/>
                    <Button x:Name="Button_End" Content="Конец" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="47" Width="166" FontSize="16"/>
                    <Button x:Name="Button_Cancel" Content="Отмена" HorizontalAlignment="Left" Margin="589,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="47" Width="166" FontSize="16"/>
                </Grid>
            </TabItem>
            <TabItem Header="Создание вопроса на тест" HorizontalAlignment="Center" Height="20" VerticalAlignment="Top" Width="164" Margin="0,-1,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Введите вопрос" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" FontSize="16"/>
                    <TextBox x:Name="TB_QuestForTest" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="498" Height="90" Margin="0,59,0,0"/>
                    <RadioButton x:Name="RB_TextPole" Content="Текстовое поле" HorizontalAlignment="Left" Margin="92,40,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16"/>
                    <RadioButton x:Name="RB_VarAnswer" Content="Вариант ответа" HorizontalAlignment="Left" Margin="92,64,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16"/>
                    <Label Content="Вид ответа" HorizontalAlignment="Left" Margin="159,9,0,0" VerticalAlignment="Top" FontSize="16" Grid.Row="1" FontWeight="Bold"/>
                    <Button x:Name="Button_Next2" Content="Дальше" HorizontalAlignment="Left" Margin="59,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="47" Width="166" FontSize="16"/>
                    <Button x:Name="Button_End2" Content="Конец" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Height="47" Width="166" FontSize="16" Margin="310,0,0,0"/>
                    <Button x:Name="Button_Cancel2" Content="Отмена" HorizontalAlignment="Left" Margin="585,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="47" Width="166" FontSize="16"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>