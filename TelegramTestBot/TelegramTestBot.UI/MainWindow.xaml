<Window x:Class="TelegramTestBot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelegramTestBot.UI"
        mc:Ignorable="d"
        Title="TelegramBot For DevEdu" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem x:Name="MainMenu" Header="Главное меню">
                <Grid >
                    <Label Content="Пользователи" HorizontalAlignment="Left" Margin="259,18,0,0" VerticalAlignment="Top" Height="32" Width="238" FontSize="16"/>
                    <Button x:Name="ButtonCreateGroup" Content="Создать группу" HorizontalAlignment="Left" Margin="42,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="47" Width="166"/>
                    <Button x:Name="ButtonCreateTest_Poll" Content="Создать тест/опрос" HorizontalAlignment="Left" Margin="295,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="47" Width="166"/>
                    <Button x:Name="ButtonCreateReport" Content="Создать отчет" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" Height="47" Width="166" Grid.Column="1"/>
                    <Button x:Name="ButtonStartTest" Content="Запуск теста/опроса" HorizontalAlignment="Left" Margin="5,26,0,0" VerticalAlignment="Top" Height="47" Width="166" Grid.Column="1"/>
                    <ListView x:Name="UserList" Margin="477,310,-915,-170" Grid.RowSpan="2" Grid.Column="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListBox x:Name="LB_Users" Margin="0,55,0,90" Grid.RowSpan="2"/>
                    <Button x:Name="ButtonStart" Content="Start" Grid.Column="1" HorizontalAlignment="Left" Margin="45,20,0,0" Grid.Row="1" VerticalAlignment="Top" Height="50" Width="90"/>
                    <Button x:Name="ButtonReg" Content="Reg" HorizontalAlignment="Left" Margin="523,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="57" Width="61"/>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="18*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                </Grid>
            </TabItem>
            <TabItem x:Name="CreateQuestTest" Header="Создание вопроса" HorizontalAlignment="Center" Height="20" VerticalAlignment="Top" Width="164" Margin="0,-1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="281*"/>
                        <ColumnDefinition Width="248*"/>
                        <ColumnDefinition Width="265*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Введите название теста" HorizontalAlignment="Left" Margin="82,10,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="182"/>
                    <TextBox x:Name="TB_NameOfTest" HorizontalAlignment="Left" Text="" TextWrapping="Wrap" Width="439" Margin="72,41,0,6" FontSize="16" Grid.ColumnSpan="2"/>
                    <RadioButton x:Name="RB_YeNo" Content="Да/Нет" HorizontalAlignment="Left" Margin="92,34,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16" Height="20" Width="71"/>
                    <RadioButton x:Name="RB_Course" Content="Сортировка" HorizontalAlignment="Left" Margin="92,54,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16" Height="20" Width="107"/>
                    <RadioButton x:Name="RB_ChooseOne" Content="Один вариант" HorizontalAlignment="Left" Margin="92,93,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16" Height="20" Width="122"/>
                    <RadioButton x:Name="RB_ChooseAny" Content="Несколько вариантов" HorizontalAlignment="Left" Margin="92,74,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16" Height="20" Width="179"/>
                    <RadioButton x:Name="RB_Poll" Content="Ввод ответа" HorizontalAlignment="Left" Margin="92,109,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16" Height="20" Width="179"/>
                    <Label Content="Вид вопроса" HorizontalAlignment="Left" Margin="119,2,0,0" VerticalAlignment="Top" FontSize="16" Grid.Row="1" FontWeight="Bold" Height="31" Width="109"/>
                    <Button x:Name="Button_Next2" Content="Дальше" HorizontalAlignment="Left" Margin="59,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="47" Width="166" FontSize="16"/>
                    <Button x:Name="Button_End2" Content="Конец" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="47" Width="166" FontSize="16" Grid.Column="1"/>
                    <Button x:Name="Button_Cancel2" Content="Отмена" HorizontalAlignment="Left" Margin="55,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="47" Width="166" FontSize="16"  Grid.Column="2"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Center" Margin="0,54,0,0" Grid.Row="1" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" Height="150"/>
                    <Label Content="Введите вопрос" HorizontalAlignment="Left" Margin="17,17,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="182" Grid.Column="1" Grid.Row="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Вывод готового опроса" HorizontalAlignment="Center" Height="20" VerticalAlignment="Top" Width="138" Margin="0,-1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Grid/>
                    <TextBlock HorizontalAlignment="Left" Margin="146,0,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Center" Height="18" Width="108" Grid.Column="1" FontSize="16"/>
                    <Label Content="Опрос:" Grid.Column="1" HorizontalAlignment="Left" Margin="45,0,0,0" VerticalAlignment="Center" Width="77" FontSize="16"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>